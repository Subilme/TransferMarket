@model Player
@{
    ViewData["Title"] = "Редактирование";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Update">

            @Html.HiddenFor(model => model.Id)

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Team" class="control-label"></label>
                <input asp-for="Team.Name" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Birthday" class="control-label"></label>
                <input asp-for="Birthday" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Amplification" class="control-label"></label>
                <input asp-for="Amplification.Name" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>